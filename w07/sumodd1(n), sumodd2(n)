#include<stdio.h>


int sumodd2(int n){
    int total=0;
    for(int i=1;i<=n;i+=2){
        total =total+i;

}
return total;
}


int sumodd1(int n){
    int total=0;
    for(int i=1;i<=2*n-1;i+=2){
        total=total+i;
}
        return total;

}

int main(){
int n;
while(n>=0){
printf("Enter n: ");
scanf("%d",&n);
printf("sumodd1(%d)=(%d)\n",n,sumodd1(n));
printf("sumodd2(%d)=(%d)\n",n,sumodd2(n));}

}
