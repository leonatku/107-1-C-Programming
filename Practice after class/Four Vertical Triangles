#include<stdio.h>
int main(){
int height;
while(height>0){
    printf("Enter height :");
    scanf("%d",&height);
    if(height>0){
        for(int i=1;i<=height;i++){
            prchar(' ',height-i);
            prchar('*',i);
            prchar(' ',2);
            prchar('*',i);
            printf("\n");}
        printf("\n");
        printf("\n");
        for(int i=0;i<=height-1;i++){
            prchar(' ',i);
            prchar('*',height-i);
            prchar(' ',2);
            prchar('*',height-i);
            printf("\n");}

}else
printf("Bye! coding by 406531169");}
return 0;
}
